<div class="container">
  <h1 class="text-center links">Matches</h1>
    <div class="row row-mobile rest-img d-flex justify-content-around" style="margin-left: 0px;">
      {{#each allRestaurantsMatched}}
        <div class="col-sm-4 rest-img">
          <div class="card bg-light rest-img" style="width: 18rem;">
            <a href="/search-liked/{{id}}" class="card-img-top"><img src={{featured_image}} class="rest-img" style="width: 18rem; height: 15rem"></a>
              <div class="card-body text-left">
              <h5 class="card-title">{{name}}</h5>
              <p class="card-text">Rating: {{user_rating.aggregate_rating}}</p>
              <p class="card-text">City: {{location.city}}</p>
            </div>
          </div>
        </div>
      {{/each}}
  </div>
</div>