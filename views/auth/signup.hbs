<div id="loginpage" class="container"> 
  <img src="/images/logo.png" style="margin-top: 1em;">
  <h1>Signup</h1>

<div id="formlogin">
  <form action="/signup" method="POST" id="form-container">
  <div class="form-group">

    <label for="username">Username</label> <br>
    <input class="form-control"  id="username" type="text" name="username" required><br>
    <label for="email">Email</label> <br>
    <input class="form-control"id="email" type="email" name="email" style="width: 100%;" required> <br>
    <label for="password">Password</label><br>
    <input class="form-control" id="password" type="password" name="password" required>
    {{!-- <button class="btn-grad-sign">Create account</button> --}}
    <button style="margin-top: 50px; margin-left: 0%; width: 100%;" class="btn-grad-edit" type="submit">Create account</button>
    {{#if errorMessage}}
      <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
    {{/if}}

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
  </div>

  </form>
</div>
</div>
