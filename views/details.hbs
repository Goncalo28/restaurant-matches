            <div class="card-block px-3 rest-det">
              <h4 class="card-title">{{name}}</h4>
              <p class="card-text">{{user_rating.aggregate_rating}} </p>
              <p class="card-text">{{cuisines}} </p>
              <p class="card-text">{{phone_numbers}} </p>
              <p class="card-text">{{timings}} </p>
              <p class="card-text"><a class="links" href="{{menu_url}}"> Menu</a> </p>
              <p class="card-text">{{location.locality_verbose}} </p>
